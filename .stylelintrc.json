{
  "extends": [
    "stylelint-config-hudochenkov/full"
  ],
  "plugins": [
    "stylelint-scss"
  ],
  "rules": {
    "at-rule-no-unknown": null,
    "indentation": 2,
    "max-line-length": [
      100,
      {
        "ignore": ["comments"],
        "ignorePattern": "/^@import\\s+/"
      }
    ],
    "scss/at-rule-no-unknown": true,
    "scss/dollar-variable-empty-line-before": null,
    "selector-max-type": [
      0,
      {
        "ignoreTypes": ["body", "html"]
      }
    ]
  }
}